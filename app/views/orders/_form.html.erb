

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
      <%= form_for @order do |f| %>
      
      <div class="form_group"></div>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        
      <div class="form_group">
        <%= f.label :box %>
        <%= f.text_field :box, class: 'form-control' %>
      </div>
      
       <br />
      
      <div class="form_group">
        <%= f.label :type %>
        <%= f.select :type,['Reagent', 'Calibrator'], class: 'form-control' %>
      </div>
      
        <br/>
      <%= f.submit 'Submit', class: 'btn btn-success' %>  
      
      <% end %>
    </div>
  </div>
</div>
